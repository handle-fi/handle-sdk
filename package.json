{
  "name": "handle-sdk",
  "version": "0.3.1",
  "description": "handle.fi sdk",
  "main": "dist/src/index.js",
  "repository": "https://github.com/handle-fi/handle-sdk",
  "author": "handle.fi",
  "license": "BUSL-1.1",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "yarn generate-contract-types",
    "build": "npx tsc",
    "prepublish": "tsc",
    "test": "nyc --reporter=lcov npx hardhat test",
    "watch-build": "tsc-watch",
    "watch-dist": "copy-and-watch --watch dist/** ../handle-react/node_modules/handle-sdk/dist",
    "watch": "npm-run-all -p -r watch-build watch-dist",
    "generate-contract-types": "typechain --target ethers-v5 --out-dir ./src/contracts './src/abis/**/*.json'"
  },
  "dependencies": {
    "@sushiswap/core-sdk": "^1.0.0-canary.34",
    "@typechain/ethers-v5": "^8.0.5",
    "@uniswap/token-lists": "^1.0.0-beta.28",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "axios": "^0.26.0",
    "ethers": "^5.5.2",
    "ethers-multicall": "https://github.com/ahinchliff/ethers-multicall#64dc01ef27058938cd32f0b9e70683bc702c41ff",
    "graphql": "^16.1.0",
    "graphql-request": "^3.7.0",
    "npm-run-all": "^4.1.5",
    "typechain": "^6.0.5",
    "typescript": "^4.5.2",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@types/chai": "^4.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.23",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.9.0",
    "@types/websocket": "^1.0.5",
    "chai": "^4.3.4",
    "chai-bignumber": "^3.0.0",
    "copy-and-watch": "^0.1.5",
    "dotenv": "^10.0.0",
    "hardhat": "^2.9.3",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "jest-environment-node": "^27.0.3",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.4.0"
  },
  "nyc": {
    "exclude": [
      "tests/**",
      "src/contracts/**",
      "**/node_modules/**"
    ]
  }
}
