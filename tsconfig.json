{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist",
    "lib": [
      "es2020", "esnext"
    ],
  },
  "include": ["./src", "./tests"],
  "exclude": ["node_modules", "./dist/**/*"]
}
